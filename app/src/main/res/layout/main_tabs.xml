<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/gray_white_border"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/id_layout_food"
            android:layout_width="30dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:background="@mipmap/food"/>
            <TextView
                android:id="@+id/id_tv_food"
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:textColor="@color/purple"
                android:gravity="center"
                android:text="美食"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/id_layout_entertainment"
            android:layout_width="30dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">
            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"

                android:background="@mipmap/entertainment"/>
            <TextView
                android:id="@+id/id_tv_entertainment"
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:gravity="center"
                android:text="娱乐"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/id_layout_my"
            android:layout_width="30dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">
            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:background="@mipmap/me"/>
            <TextView
                android:id="@+id/id_tv_my"
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:gravity="center"
                android:text="我的"/>
        </LinearLayout>

    </LinearLayout>
</LinearLayout>
